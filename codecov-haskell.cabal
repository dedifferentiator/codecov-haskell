author:         Guillaume Nargeot, 8c6794b6
maintainer:     8c6794b6 <8c6794b6@gmail.com>
copyright:      (c) 2014-2015 Guillaume Nargeot
                (c) 2020 8c6794b6
category:       Control
build-type:     Simple
stability:      experimental
tested-with:    GHC == 8.8, GHC == 8.10
homepage:       https://github.com/8c6794b6/codecov-haskell
bug-reports:    https://github.com/8c6794b6/issues

extra-source-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/8c6794b6/codecov-haskell.git

library
  hs-source-dirs: src
  exposed-modules:
    Codecov.Haskell.CmdLine
    Codecov.Haskell.Main
    Codecov.Haskell.Query
    Trace.Hpc.Codecov
    Trace.Hpc.Codecov.Config
    Trace.Hpc.Codecov.Lix
    Trace.Hpc.Codecov.Util
    Paths_codecov_haskell
  other-modules:
    Trace.Hpc.Codecov.Curl
  autogen-modules:
    Paths_codecov_haskell
  build-depends:
    aeson,     
    base        >= 4 && < 5,
    bytestring  >= 0.10,
    containers  >= 0.5,
    cmdargs     >= 0.10,
    curl        >= 1.3.8,
    filepath    >= 1.4.1,
    hpc         >= 0.6,
    http-client >= 0.7,
    http-client-tls >= 0.3.5,
    network-uri >= 2.6,
    retry       >= 0.7,
    safe        >= 0.3
  default-language:
    Haskell2010
  ghc-options:
    -Wall

executable codecov-haskell
  hs-source-dirs: exec
  main-is:        codecov-haskell.hs
  build-depends:
    base,
    codecov-haskell
  default-language:
    Haskell2010
  ghc-options:    -Wall -fwarn-tabs -fwarn-incomplete-uni-patterns

